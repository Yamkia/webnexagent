<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Add Preview button to brand form view -->
  <record id="view_deployable_brand_form_preview" model="ir.ui.view">
    <field name="name">deployable.brand.form.preview</field>
    <field name="model">deployable.brand</field>
    <field name="inherit_id" ref="view_deployable_brand_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="before">
        <header>
          <button name="action_preview_brand" type="object" string="Preview Brand" class="oe_highlight"/>
        </header>
      </xpath>
    </field>
  </record>

  <!-- Brand Management Dashboard -->
  <record id="view_brand_dashboard_kanban" model="ir.ui.view">
    <field name="name">deployable.brand.dashboard.kanban</field>
    <field name="model">deployable.brand</field>
    <field name="arch" type="xml">
      <kanban class="o_kanban_mobile">
        <field name="name"/>
        <field name="code"/>
        <field name="primary_color"/>
        <field name="secondary_color"/>
        <field name="logo_svg"/>
        <field name="is_active"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click" style="border-left: 4px solid;" t-attf-style="border-left-color: {{ record.primary_color.raw_value }};">
              <div class="o_kanban_record_top">
                <div class="o_kanban_record_headings">
                  <strong class="o_kanban_record_title">
                    <field name="name"/>
                  </strong>
                  <span class="badge" t-attf-style="background-color: {{ record.primary_color.raw_value }}; color: white;">
                    <field name="code"/>
                  </span>
                </div>
              </div>
              <div class="o_kanban_record_body">
                <div class="row">
                  <div class="col-6">
                    <span class="text-muted">Primary:</span>
                    <div class="mt-1" t-attf-style="width: 40px; height: 20px; background: {{ record.primary_color.raw_value }}; border-radius: 4px; border: 1px solid #ddd;"/>
                  </div>
                  <div class="col-6">
                    <span class="text-muted">Secondary:</span>
                    <div class="mt-1" t-attf-style="width: 40px; height: 20px; background: {{ record.secondary_color.raw_value }}; border-radius: 4px; border: 1px solid #ddd;"/>
                  </div>
                </div>
                <div class="mt-2" t-if="record.logo_svg.raw_value">
                  <img t-att-src="record.logo_svg.raw_value" alt="Logo" style="max-height: 30px;"/>
                </div>
              </div>
              <div class="o_kanban_record_bottom">
                <div class="oe_kanban_bottom_left">
                  <field name="is_active" widget="boolean_toggle"/>
                </div>
                <div class="oe_kanban_bottom_right">
                  <a type="object"
                     name="action_preview_brand"
                     class="btn btn-sm btn-primary"
                     role="button">Preview</a>
                </div>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Update action to include kanban view -->
  <record id="action_deployable_brand" model="ir.actions.act_window">
    <field name="view_mode">kanban,list,form</field>
  </record>
</odoo>
