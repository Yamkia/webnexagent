<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Tree View for brands -->
  <record id="view_deployable_brand_tree" model="ir.ui.view">
    <field name="name">deployable.brand.tree</field>
    <field name="model">deployable.brand</field>
    <field name="arch" type="xml">
      <tree string="Brands">
        <field name="name"/>
        <field name="code"/>
        <field name="primary_color" widget="color"/>
        <field name="secondary_color" widget="color"/>
        <field name="is_active"/>
      </tree>
    </field>
  </record>

  <!-- Form View for brands -->
  <record id="view_deployable_brand_form" model="ir.ui.view">
    <field name="name">deployable.brand.form</field>
    <field name="model">deployable.brand</field>
    <field name="arch" type="xml">
      <form string="Brand">
        <sheet>
          <div class="oe_title">
            <label for="name" class="oe_edit_only"/>
            <h1><field name="name" placeholder="Brand Name"/></h1>
          </div>
          <group>
            <group>
              <field name="code"/>
              <field name="is_active"/>
            </group>
            <group>
              <field name="primary_color" widget="color"/>
              <field name="secondary_color" widget="color"/>
            </group>
          </group>
          <group string="Assets">
            <field name="logo_svg" placeholder="/path/to/logo.svg"/>
            <field name="favicon" widget="image"/>
          </group>
          <notebook>
            <page string="Websites">
              <field name="website_ids">
                <tree>
                  <field name="name"/>
                  <field name="domain"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action for brands -->
  <record id="action_deployable_brand" model="ir.actions.act_window">
    <field name="name">Brands</field>
    <field name="res_model">deployable.brand</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create your first brand
      </p>
      <p>
        Define multiple brand profiles to white-label your Odoo environment.
        Each brand has its own colors, logos, and can be assigned to different websites.
      </p>
    </field>
  </record>

  <!-- Menu Item under Website -->
  <menuitem id="menu_deployable_brand"
            name="Brands"
            parent="website.menu_website_configuration"
            action="action_deployable_brand"
            sequence="50"/>
</odoo>
