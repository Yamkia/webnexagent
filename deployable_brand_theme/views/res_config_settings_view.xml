<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_deployable_brand" model="ir.ui.view">
    <field name="name">res.config.settings.view.deployable.brand</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="website.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='website_settings']" position="inside">
        <div class="app_settings_block" data-string="Branding" string="Branding">
          <h2>White Label Brand</h2>
          <div class="row mt16">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="website_brand_id"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="website_brand_id" string="Brand"/>
                <p class="text-muted">Select which brand profile applies to this website. Affects logo, colors and CSS scope.</p>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>